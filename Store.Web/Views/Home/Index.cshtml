@{
    ViewBag.Title = "Home";
}

<div ng-controller="StoreController">

    <div class="row">
        <div class="col-md-6">
            <h2>Product List</h2>
            <table class="table table-condensed table-bordered">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Price</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="product in Products">
                        <td>{{product.Name}}</td>
                        <td>{{product.Price}}</td>
                        <td>
                            <input type="button" ng-click="AddToCart(product)" value="Add to cart" />
                        </td>
                    </tr>
                </tbody>

            </table>
        </div>

        <div class="col-md-6">
            <h2>Cart</h2>

            <label>Select Current Discount Schemes</label>
            <div ng-repeat="discountScheme in DiscountSchemes">
                <input type="radio" name="chkDiscountScheme" ng-model="$parent.CurrentDiscountScheme" ng-value="discountScheme.Name" />{{discountScheme.Name}}
            </div>
            <br />

            <form name="orderForm" novalidate>
                <label>Customer Birthday</label>
                <input name="customerBirthday" type="date" ng-model="CustomerBirthday" />
                @*<span ng-show="orderForm.customerBirthday.$error.date">Invalid input.</span>*@
                <br />

                <div ng-show="InvalidForm" class="alert alert-danger">Please select a product first!</div>

                <table class="table table-condensed table-bordered">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Price</td>
                            <td>Quantity</td>
                            <td>Remove</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="product in CartProducts">
                            <td>{{product.Name}}</td>
                            <td>{{product.Price}}</td>
                            <td>
                                <input name="quantity" type="number" ng-model="product.Quantity" min="1" max="9999" style="width: 50px;" maxlength="4" />
                                <span ng-show="orderForm.quantity.$error.number">Invalid input.</span>
                            </td>
                            <td>
                                <input type="button" ng-click="RemoveFromCart(product)" value="Remove from cart" />

                            </td>
                        </tr>
                    </tbody>

                </table>
                <button ng-click="CalculateOrder()">Calculate Order</button>

            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>Calculated Order</h2>
            <table class="table table-condensed table-bordered">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Price</td>
                        <td>Quantity</td>
                        <td>Total</td>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="orderDetails in Order.OrderDetails">
                        <td>{{orderDetails.Product.Name}}</td>
                        <td>{{orderDetails.Product.Price}}</td>
                        <td>{{orderDetails.Quantity}}</td>
                        <td>{{orderDetails.Total}}</td>
                    </tr>
                    <tr>
                        <td>SUB TOTAL</td>
                        <td></td>
                        <td></td>
                        <td>{{Order.TotalOrder}}</td>
                    </tr>
                    <tr>
                        <td>DISCOUNT</td>
                        <td>PERCENTAGE</td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr ng-repeat="discount in Order.Discounts">
                        <td>{{discount.Name}}</td>
                        <td>{{discount.EffectiveDiscount}}%</td>
                        <td></td>
                        <td>{{$parent.Order.TotalOrder * discount.EffectiveDiscount / 100 }}</td>
                    </tr>

                    <tr>
                        <td>Total Discount</td>
                        <td>{{Order.TotalDiscount}}%</td>
                        <td></td>
                        <td>{{Order.TotalDiscountAmount}}</td>
                    </tr>

                    <tr>
                        <td>Total</td>
                        <td></td>
                        <td></td>
                        <td>{{Order.Total}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
